<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ff000000"
    android:gravity="center"
    android:visibility="gone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageBg"
        android:layout_width="200.0dip"
        android:layout_height="200.0dip"
        android:background="#00000000"
        android:gravity="center" />

    <ImageView
        android:id="@+id/animationImageView"
        android:layout_width="120.0dip"
        android:layout_height="120.0dip"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#00000000"
        android:contentDescription="@string/loadingImageView" />

    <TextView
        android:id="@+id/progressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30.0dip"
        android:text="@string/progressVlaue"
        android:textColor="#fff8f8ff" />

    <TextView
        android:id="@+id/downloadSpeedView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="110.0dip"
        android:gravity="center"
        android:text="@string/downloadSpeed"
        android:textColor="#fff8f8ff" />

</RelativeLayout>